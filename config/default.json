{
  "server": {
    "name": "debate-consensus-mcp",
    "version": "1.0.0",
    "port": 3000,
    "host": "localhost"
  },
  "api": {
    "openrouter": {
      "baseUrl": "https://openrouter.ai/api/v1/chat/completions",
      "maxRetries": 3,
      "retryDelay": 1000,
      "defaultTemperature": 0.7,
      "defaultMaxTokens": 4096,
      "timeout": 30000
    },
    "anthropic": {
      "baseUrl": "https://api.anthropic.com/v1/messages",
      "maxRetries": 3,
      "retryDelay": 1000,
      "defaultTemperature": 0.7,
      "defaultMaxTokens": 4096,
      "timeout": 30000
    }
  },
  "models": {
    "claude": {
      "id": "claude-opus-4-1-20250805",
      "name": "Claude Opus 4.1",
      "provider": "cli",
      "capabilities": ["architecture", "synthesis", "planning"],
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "gpt5": {
      "id": "openai/gpt-5-chat",
      "name": "GPT-5 Pro",
      "provider": "openrouter",
      "capabilities": ["testing", "debugging", "analysis"],
      "maxTokens": 4096,
      "temperature": 0.7
    },
    "qwen": {
      "id": "qwen/qwen3-max",
      "name": "Qwen 3 Max",
      "provider": "openrouter",
      "capabilities": ["algorithms", "optimization", "coding"],
      "maxTokens": 8192,
      "temperature": 0.7
    },
    "gemini": {
      "id": "google/gemini-3-pro-preview",
      "name": "Gemini 3 Pro Preview",
      "provider": "openrouter",
      "capabilities": ["integration", "completeness", "reasoning"],
      "maxTokens": 1048576,
      "temperature": 0.7
    }
  },
  "debate": {
    "maxRounds": 5,
    "minParticipants": 2,
    "maxParticipants": 4,
    "consensusThreshold": 0.8,
    "timeoutMs": 3600000
  },
  "logging": {
    "level": "info",
    "format": "json",
    "directory": "./logs",
    "maxFiles": 10,
    "maxSize": "10mb"
  },
  "features": {
    "history": true,
    "logging": true,
    "validation": true,
    "caching": false,
    "metrics": false
  },
  "security": {
    "rateLimiting": {
      "windowMs": 900000,
      "maxRequests": 100
    },
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000"]
    }
  }
}