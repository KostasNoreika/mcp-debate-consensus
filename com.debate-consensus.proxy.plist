<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.debate-consensus.proxy</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/opt/mcp/servers/debate-consensus/start-all-proxies.sh</string>
        <string>--keep-alive</string>
    </array>
    
    <key>WorkingDirectory</key>
    <string>/opt/mcp/servers/debate-consensus</string>
    
    <key>RunAtLoad</key>
    <true/>
    
    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
        <key>Crashed</key>
        <true/>
    </dict>
    
    <key>StandardOutPath</key>
    <string>/opt/mcp/servers/debate-consensus/logs/proxy-stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/opt/mcp/servers/debate-consensus/logs/proxy-stderr.log</string>
    
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
        <key>NODE_ENV</key>
        <string>production</string>
    </dict>
    
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>